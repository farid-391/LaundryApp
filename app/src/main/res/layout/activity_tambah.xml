<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".TambahActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/second_color"
        android:text="Form Laundry"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:text="Nama Pemesan" />
    <EditText
        android:id="@+id/tambah_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tambah_nama"
        android:layout_below="@id/tambah_nama"
        android:layout_marginTop="10dp"
        android:text="Alamat Pemesan" />
    <EditText
        android:id="@+id/tambah_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tambah_alamat"
        android:layout_below="@id/tambah_alamat"
        android:layout_marginTop="10dp"
        android:text="Berat (Kg)" />
    <EditText
        android:id="@+id/tambah_berat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tambah_berat"
        android:layout_below="@+id/tambah_berat"
        android:layout_marginTop="10dp"
        android:text="Paket" />
    <Spinner
        android:id="@+id/tambah_paket"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2ecc71"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:entries="@array/android_dropdown_arrays"
        android:padding="5dp" />
