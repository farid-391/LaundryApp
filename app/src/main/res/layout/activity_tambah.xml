    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tambah_paket">
        <Button
            android:id="@+id/btn_tambah_save"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Tambah"/>
        <Button
            android:id="@+id/btn_tambah_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_tambah_save"
            android:text="Kembali"/>
    </RelativeLayout>
</RelativeLayout>